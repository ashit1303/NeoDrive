generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model files {
  id         BigInt    @id @default(autoincrement()) @db.UnsignedBigInt
  file_name  String    @db.VarChar(127)
  file_size  BigInt    @default(0) @db.UnsignedBigInt
  file_sha   String    @unique(map: "file_sha") @db.VarChar(64)
  file_path  String    @db.VarChar(255)
  created_at DateTime? @default(now()) @db.Timestamp(0)
  updated_at DateTime? @db.Timestamp(0)
}

model shortend_link {
  id           BigInt    @id @default(autoincrement()) @db.UnsignedBigInt
  original_url String    @db.VarChar(255)
  short_code   String    @unique(map: "short_code") @db.VarChar(20)
  access_count Int?      @default(0)
  created_by   Int?      @db.UnsignedInt
  created_at   DateTime? @default(now()) @db.Timestamp(0)
  updated_at   DateTime? @default(now()) @db.Timestamp(0)
}

model users {
  id          BigInt    @id @default(autoincrement()) @db.UnsignedBigInt
  email       String    @db.VarChar(63)
  name        String?   @db.VarChar(63)
  username    String    @db.VarChar(31)
  password    String    @db.VarChar(127)
  is_verified Boolean?  @default(false)
  created_at  DateTime? @default(now()) @db.Timestamp(0)
  updated_at  DateTime? @default(now()) @db.Timestamp(0)
}
